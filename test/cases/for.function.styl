join(delim, args)
  buf = ''
  for arg, i in args
    buf += i ? delim + arg : arg

join2(delim, args)
  buf = ''
  buf += i ? delim + arg : arg for arg, i in args

body
  foo join(' ', foo bar baz)
  foo join(', ', foo bar baz)
  foo join2(' ', 1 2 3)
  foo join2(', ', 1 2 3)

