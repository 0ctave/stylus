
large = 60px
small = 14px
dark-gray = #2C2C2C

border-radius(args...)
  -webkit-border-radius args
  -moz-border-radius args
  border-radius args

user-select(type)
  -webkit-user-select type

box-shadow(args...)
  -moz-box-shadow args
  -webkit-box-shadow args
  box-shadow args

button(font-size = 12px)
  display block
  padding 8px 0 9px
  background #e3e3e3
  border 1px solid #bbb
  border-radius 3px
  box-shadow inset 0 0 1px 1px #f6f6f6
  text-shadow 0 1px 0 #fff
  font-size font-size
  font-weight bold
  line-height 1
  text-align center
  text-decoration none
  user-select none
  width 150px
  color #333

  &:hover
    background #d9d9d9
    -moz-box-shadow inset 0 0 1px 1px #eaeaea
    -webkit-box-shadow inset 0 0 1px 1px #eaeaea
    box-shadow inset 0 0 1px 1px #eaeaea
    color #222
    cursor pointer

  &:active
    background #d0d0d0
    -moz-box-shadow inset 0 0 1px 1px #e3e3e3
    -webkit-box-shadow inset 0 0 1px 1px #e3e3e3
    box-shadow inset 0 0 1px 1px #e3e3e3
    color #000

body
  padding 50px
  font small 'helvetica neue', helvetica, arial, sans-serif

h1
  margin 10px 0 15px 0
  font-weight bold
  font-size large

.tagline
  margin 0
  padding 0
  em
    font-style normal
    &.expressive
      color dark-gray
    &.dynamic
      color lighten(dark-gray, 20%)
    &.robust
      color lighten(dark-gray, 40%)
    &.css
      color lighten(dark-gray, 60%)

#content
  margin 25px 0

a.button
  button()