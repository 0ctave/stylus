
large = 60px
small = 14px
dark-gray = #222

border-radius(args...)
  -webkit-border-radius args
  -moz-border-radius args
  border-radius args

user-select(type)
  -webkit-user-select type

box-shadow(args...)
  -moz-box-shadow args
  -webkit-box-shadow args
  box-shadow args

transform(args...)
  -webkit-transform args
  -moz-transform args

ribbon(color)
  position absolute
  top 2.5em
  left -3.75em
  transform rotate(-45deg)
  background-color color
  padding 1px 0
  overflow hidden
  box-shadow 1px 1px 3px rgba(0,0,0,0.3)
  a
    color #fff
    border 1px solid desaturate(lighten(color, 40%), 20%)
    display block
    margin 0.05em 0
    padding 0.5em 3.5em
    text-align center
    text-decoration none

button(font-size = 12px)
  display block
  padding 8px 0 9px
  background #e3e3e3
  border 1px solid #bbb
  border-radius 3px
  box-shadow inset 0 0 1px 1px #f6f6f6
  text-shadow 0 1px 0 #fff
  font-size font-size
  font-weight bold
  line-height 1
  text-align center
  text-decoration none
  user-select none
  width 150px
  color #333

  &:hover
    background #d9d9d9
    box-shadow inset 0 0 1px 1px #eaeaea
    color #222
    cursor pointer

  &:active
    background #d0d0d0
    box-shadow inset 0 0 1px 1px #e3e3e3
    color #000

html
  dark = #dadada
  background dark
  background -moz-linear-gradient(-90deg, #fff, dark) fixed
  background -webkit-gradient(linear, left top, left bottom, from(#fff), to(dark)) fixed

body
  padding 120px 150px
  font small 'helvetica neue', helvetica, arial, sans-serif
  color lighten(dark-gray, 15%)

h1
h2
h3
  color dark-gray

h1
  margin 10px 0 15px 0
  font-weight bold
  font-size large

h2
  margin 0
  font-size 18px

a
  text-decoration none
  color #B90101
  &:hover
    text-decoration underline

ul
  margin 0
  padding 0 25px
  li
    list-style square

.tagline
  margin 0
  padding 0
  em
    font-style normal
    &.expressive
      color dark-gray
    &.dynamic
      color lighten(dark-gray, 20%)
    &.robust
      color lighten(dark-gray, 40%)
    &.css
      color lighten(dark-gray, 60%)

#container
  text-align center
  #content
    margin 0 auto
    padding-top 40px
    width 300px
    text-align left

.example
  margin-top 25px
  pre
    width 300px
    background white
    border-radius 5px
    padding 30px
    color #8D8D8D
    font 12px\/1.4 monaco, 'helvetica neue', helvetica
    box-shadow rgba(dark-gray, 0.1) -1px -1px
  
a.button
  clear both
  float left
  button()

#ribbon
  ribbon(#a00)